<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="#03A5FD"
    android:background="@drawable/round_coner_edit_text"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/note_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Title"
        android:textColor="#FAFAFA"
        android:textSize="17sp"
        android:layout_marginVertical="5sp"/>
    <TextView
        android:id="@+id/note_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="that can be note content that can be long"
        android:maxLines="2"
        android:ellipsize="middle"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_marginVertical="5sp"/>

    <TextView
        android:id="@+id/note_timestamp_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5sp"
        android:gravity="right"
        android:text="Time show here"
        android:textColor="#F7F7F8"
        android:textSize="12dp" />

</LinearLayout>