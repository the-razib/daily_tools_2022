<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page3"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUpPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Create New Account"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/UserNameTextID"
        android:layout_width="338dp"
        android:layout_height="54dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_coner_edit_text"
        android:hint="Full Name"
        android:padding="10sp"
        android:textColorHint="#DADADA"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/EmailSignupEdittextID"
        android:layout_width="337dp"
        android:layout_height="61dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_coner_edit_text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textColorHint="#DADADA"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/PasswordSingUpEditTextID"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_coner_edit_text"
        android:hint="Password "
        android:inputType="textWebPassword"
        android:padding="10sp"
        android:textColorHint="#DADADA"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ConPasswordSingUpEditTextID"
        android:layout_width="334dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="4sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/round_coner_edit_text"
        android:hint="Confirm Password "
        android:inputType="textWebPassword"
        android:padding="10sp"
        android:textColorHint="#DADADA"
        android:textSize="20sp" />
    <RadioGroup
        android:id="@+id/GenderID"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Select Gender"
            android:textStyle="bold"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/MaleGenderId"
            android:layout_width="0sp"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="20sp"
            android:textColor="#676462"/>
        <RadioButton
            android:id="@+id/FemaleGenderID"
            android:layout_width="0sp"
            android:layout_weight=".9"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20sp"
            android:textColor="#676462"/>
    </RadioGroup>

    <Button
        android:id="@+id/CreatAcountButtonID"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Signup"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ProgressBar
        android:id="@+id/signUpProgress_ber"
        android:layout_width="24dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="13sp"/>
    
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Account?"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:onClick="BackToLogInPage"
            android:textStyle="bold"
            android:textColor="#4915BF"
            android:textSize="15dp"/>

    </LinearLayout>



</LinearLayout>