<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <!--        Navigation setting-->
        <LinearLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#D0e0d8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/menu_icon"
                app:tint="#708070" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:text="@string/app_name"
                android:textColor="#708070"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/CalculatorsBtnID"
                android:layout_width="188dp"
                android:layout_height="67dp"
                android:background="@drawable/button"
                android:onClick="CalculatorsFunction"
                android:text="Calculators"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/ConvertersBtnID"
                android:layout_width="188dp"
                android:layout_height="69dp"
                android:layout_marginTop="15sp"
                android:background="@drawable/button"
                android:onClick="ConverterFunction"
                android:text="Converters"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/PersonalNoteBtnID"
                android:layout_width="201dp"
                android:layout_height="61dp"
                android:layout_marginTop="15sp"
                android:background="@drawable/button"
                android:onClick="PersonalNoteFunction"
                android:text="Personal Note"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/OthersBtnID"
                android:layout_width="201dp"
                android:layout_height="58dp"
                android:layout_marginTop="15sp"
                android:background="@drawable/button"
                android:onClick="Others"
                android:text="Others"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp" />


<!--    <Button-->
<!--        android:id="@+id/AboutUsBtnID"-->
<!--        android:layout_width="183dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="150sp"-->
<!--        android:background="@drawable/button"-->
<!--        android:onClick="AboutMeFunction"-->
<!--        android:text="About Me"-->
<!--        android:textAllCaps="false"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="25dp" />-->
    </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawar_head_layout"
        app:menu="@menu/navigation_menu" />


</androidx.drawerlayout.widget.DrawerLayout>