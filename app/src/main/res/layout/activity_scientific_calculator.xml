<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="0"
    tools:context=".ScientificCalculator">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:background="#8394F3" />

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:background="#FF6DCA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        android:layout_marginLeft="3sp"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bsin"
                        android:textAllCaps="false"
                        android:text="sin"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/btan"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:layout_marginRight="3sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#F4F4F4"
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>

                    <Button
                        android:id="@+id/bln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ln"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:textSize="20sp">


                    </Button>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bfact"
                        android:text="x!"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bsquare"
                        android:text="x²"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bsqrt"
                        android:text="√"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/binv"
                        android:text="1/x"
                        android:layout_marginRight="3sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:id="@+id/bdiv"
                        android:text="÷"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:layout_marginRight="3sp"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#FAF7F3"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b8"
                        android:text="8"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b9"
                        android:text="9"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:id="@+id/bmul"
                        android:text="×"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>




                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout

                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b4"
                        android:text="4"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b5"
                        android:text="5"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b6"
                        android:text="6"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:id="@+id/bmin"
                        android:text="-"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b1"
                        android:text="1"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b2"
                        android:text="2"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b3"
                        android:text="3"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:id="@+id/bplus"
                        android:text="+"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:layout_marginRight="3sp"
                        android:id="@+id/bpi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:text="π"
                        android:textColor="#fff"
                        android:textSize="30sp">


                    </Button>

                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/b0"
                        android:text="0"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:background="@drawable/button"
                        android:id="@+id/bdot"
                        android:text="."
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>
                    <Button
                        android:layout_marginRight="3sp"
                        android:id="@+id/bequal"
                        android:text="="
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:textColor="#F4F4F4"
                        android:background="@drawable/button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </Button>



                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>